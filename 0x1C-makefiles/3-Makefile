CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
all: ${NAME}
.PHONY: clean oclean fclean re
${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} -c -o $@ $<

clean:
	${RM} $(wildcard *~) $(wildcard *.swp) ${NAME}
oclean:
	${RM} $(wildcard *.o)
fclean:
	${RM} $(wildcard *~) $(wildcard *.swp) ${NAME} $(wildcard *.o)
re: fclean all